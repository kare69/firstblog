
<!DOCTYPE html>
<html lang="en">







<h1>All Our Statuses</h1>
<div class="bs-docs-example"> 
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Content</th>
        <th>Next</th>
        <th></th>
        <th></th>
        <th> </th>
      </tr>
    </thead>
  <tbody>
      <% @statuses.each do |status| %>
      <tr>
        <td><%= status.name %></td>
        <td><%= status.content %></td>
        <td><%= status.next %></td>
        <td><%= link_to 'Show', status %></td>
        <td><%= link_to 'Edit', edit_status_path(status) %></td>
        <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<p>
  <button class="btn" type="button">
     <%= link_to 'New Status', new_status_path %>
  </button>
</p>
</html>





